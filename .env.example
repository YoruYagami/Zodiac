# Zodiac Security Analyzer - Environment Configuration
# Copy this file to .env and configure with your settings

# ============================================
# REQUIRED: OpenRouter/OpenAI Configuration
# ============================================

# Your OpenRouter API key (get from https://openrouter.ai)
OPENAI_API_KEY=your_openrouter_api_key_here

# OpenRouter base URL (default: https://openrouter.ai/api/v1)
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# OpenRouter headers for tracking
OPENROUTER_REFERRER=https://local.dev
OPENROUTER_TITLE=Zodiac Android Security Analyzer

# ============================================
# LLM Configuration
# ============================================

# Language model to use (via OpenRouter)
# Options: openai/gpt-4o, openai/gpt-4o-mini, anthropic/claude-3-opus, etc.
LLM_MODEL=openai/gpt-4o

# Embedding model for RAG
EMBEDDING_MODEL=openai/text-embedding-3-large

# LLM temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=2000

# ============================================
# Analysis Configuration
# ============================================

# Validation strictness level
# Options: strict, moderate, lenient
VALIDATION_LEVEL=moderate

# Analysis mode
# Options: quick, standard, comprehensive, deep
ANALYSIS_MODE=standard

# Enable RAG system (true/false)
ENABLE_RAG=true

# Enable source code indexing for RAG
ENABLE_SOURCE_INDEXING=true

# ============================================
# Tool Configuration
# ============================================

# Decompiler timeout in seconds
DECOMPILER_TIMEOUT=300

# Scanner timeout in seconds
SCANNER_TIMEOUT=300

# Maximum APK file size in MB
MAX_FILE_SIZE_MB=500

# ============================================
# RAG Configuration
# ============================================

# Text chunk size for document splitting
CHUNK_SIZE=1000

# Chunk overlap for context preservation
CHUNK_OVERLAP=200

# Number of documents to retrieve for RAG
RETRIEVER_K=5

# ============================================
# Validation Configuration
# ============================================

# Minimum confidence threshold for true positives
MIN_CONFIDENCE=0.7

# Aggressive false positive reduction
FP_REDUCTION_AGGRESSIVE=false

# ============================================
# Report Configuration
# ============================================

# Default report format
# Options: json, html, markdown
REPORT_FORMAT=json

# Include code snippets in reports
INCLUDE_CODE_SNIPPETS=true

# Maximum code snippet length
MAX_SNIPPET_LENGTH=500

# ============================================
# Agent Configuration
# ============================================

# Maximum iterations for agents
AGENT_MAX_ITERATIONS=10

# Agent timeout in seconds
AGENT_TIMEOUT=60

# ============================================
# Paths Configuration
# ============================================

# Working directory for analysis
WORK_DIR=./analysis

# Temporary files directory
TEMP_DIR=/tmp/zodiac

# Reports output directory
REPORTS_DIR=./reports

# Vector database path
VECTOR_DB_PATH=./vectorstore

# ============================================
# Debug Configuration
# ============================================

# Enable debug mode
DEBUG=false

# ============================================
# Performance Configuration
# ============================================

# Number of parallel threads for processing
PARALLEL_THREADS=4

# Enable performance profiling
ENABLE_PROFILING=false

# ============================================
# Security Configuration
# ============================================

# Enable security event logging
SECURITY_LOGGING=true

# Log sensitive data (use with caution)
LOG_SENSITIVE_DATA=false

# ============================================
# Custom Rules Configuration
# ============================================

# Path to custom validation rules
CUSTOM_RULES_PATH=./custom_rules.json

# Enable custom rule processing
ENABLE_CUSTOM_RULES=false

# ============================================
# Network Configuration
# ============================================

# HTTP proxy (if needed)
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS proxy (if needed)
# HTTPS_PROXY=https://proxy.example.com:8080

# No proxy domains
# NO_PROXY=localhost,127.0.0.1

# ============================================
# Advanced Features
# ============================================

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable beta AI models
USE_BETA_MODELS=false

# Cache analysis results
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600